{
  "name": "@meitrans/backend",
  "version": "1.0.0",
  "description": "AI Translation Agent Backend - Cloudflare Workers",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "wrangler dev",
    "build": "wrangler deploy --dry-run --outdir=dist",
    "deploy": "wrangler deploy",
    "typecheck": "tsc --noEmit",
    "d1:create": "wrangler d1 create webtrans-memory",
    "d1:migrate": "wrangler d1 execute webtrans-memory --local --file=./src/db/schema.sql",
    "d1:migrate:prod": "wrangler d1 execute webtrans-memory --file=./src/db/schema.sql"
  },
  "dependencies": {
    "hono": "^4.6.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20241127.0",
    "typescript": "^5.6.3",
    "wrangler": "^3.99.0"
  }
}
