{
  "manifest_version": 3,
  "name": "Web Translator",
  "version": "1.0.0",
  "description": "Translate selected text, web pages, and PDF documents",
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "permissions": ["storage", "tabs", "contextMenus", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Web Translator",
    "default_icon": "assets/icon48.png",
    "default_popup": "src/popup/index.html"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content/index.tsx"],
      "all_frames": true,
      "run_at": "document_idle"
    }
  ],
  "options_ui": {
    "page": "src/options/index.html",
    "open_in_tab": true
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "toggle_web_trans": {
      "suggested_key": {
        "default": "Alt+Shift+T"
      },
      "description": "Toggle web page translation"
    },
    "toggle_input_box": {
      "suggested_key": {
        "default": "Alt+Shift+D"
      },
      "description": "Open translation input box"
    }
  }
}
